<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yhtye.shanghaishishigongjiaochaxun.MainActivity" >

    <RelativeLayout android:id="@+id/bannerr"
        android:layout_width="fill_parent"  
        android:layout_height="60dp"
        android:background="@color/blue">
        
        <TextView android:id="@+id/txtHide" 
            android:layout_width="0dp" 
            android:layout_height="40dp" 
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" /> 
           
        <Button android:id="@+id/shishichaxun"
            android:background="@drawable/button_left"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txtHide"
            android:layout_toLeftOf="@id/txtHide" 
            android:text="@string/shishichaxun"
            android:onClick="shishichaxunClick"
            />
        
        <Button android:id="@+id/huanshengchaxun"
            android:background="@drawable/button_right"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/txtHide"
            android:layout_toRightOf="@id/txtHide"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="@string/huanshengchaxun"
            android:onClick="huanshengchaxunClick"
            />
     </RelativeLayout>
     
    <LinearLayout android:id="@+id/shishichaxunlayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/bannerr"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
        >
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numberone"
            android:textSize="13sp"
            android:hint="@string/default_line"/>
    
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/button_send"
        android:textColor="#ffffff"
        android:background="@drawable/button_chaxun"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:onClick="searchLineClick"/>
    
    <ListView android:id="@+id/list_history_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:listSelector="@android:color/transparent"
        android:divider="@null">
        
    </ListView>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:lineSpacingMultiplier="1.5"
        android:textSize="12sp"
        android:textColor="#858f95"
        android:text="@string/rule"/>
    
    </LinearLayout>
    
    <LinearLayout android:id="@+id/huanchenglayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/bannerr"
            android:background="@color/white"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:visibility="invisible">
        
        <RelativeLayout 
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content">
            
            <ImageView
             android:id="@+id/switchqizongButton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true"
             android:layout_marginLeft="10dp"
             android:layout_marginStart="10dp"
             android:layout_centerVertical="true"
             android:contentDescription="@string/app_name"
             android:src="@drawable/fanxiang" 
             android:onClick="switchStationsClick"/>
            
         <TableLayout
             android:layout_toStartOf="@id/switchqizongButton" 
             android:layout_toLeftOf="@id/switchqizongButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >
            <TableRow 
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                               
                <ImageView
                     android:layout_height="wrap_content" 
                     android:layout_width="wrap_content" 
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/qidian1"/>
                
                <EditText android:id="@+id/qiidianEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="请输入起点"/>
            </TableRow>
            <TableRow>
                <View
                    android:id="@+id/div_tab_bar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="1"
                    android:background="@color/silver"/>
            </TableRow>
            
            <TableRow 
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                     android:layout_height="wrap_content" 
                     android:layout_width="wrap_content" 
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/zongdian"/>
                
                <EditText android:id="@+id/zongdianEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="请输入终点"/>
            </TableRow>
        </TableLayout>
        </RelativeLayout>
        <View
            android:id="@id/div_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver"/>
        
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/button_send"
        android:id="@+id/hellobutton"
        android:textColor="#ffffff"
        android:background="@drawable/button_chaxun"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:onClick="searchRoutesClick"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/baiduguanggao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
    
    </LinearLayout>
</RelativeLayout>
