<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ededf0"
    android:orientation="vertical" >
  
    <RelativeLayout  
        android:id="@+id/lr_station"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >  
        
        <ImageView 
            android:id="@+id/weixuanzhongicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/weixuanzhong"/>
        
        <TextView
            android:id="@+id/tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/weixuanzhongicon"
            android:layout_toRightOf="@+id/weixuanzhongicon"
            android:background="@drawable/zhandianqipao"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textStyle="bold" />
        
        <ImageView
            android:id="@+id/iv_xiala_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/xiala" />
        
        <ImageView
            android:id="@+id/iv_xiatop_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/xiatop" />
        
    </RelativeLayout>  
  
    <RelativeLayout  
        android:id="@+id/ll_cards"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:orientation="vertical" >  
  
        <TextView  
                android:id="@+id/tv_card_name"  
                android:background="@color/white"
                android:text="@string/no_cars"  
                android:layout_width="fill_parent"  
                android:layout_height="wrap_content" 
                android:padding="5dp"
                android:textSize="13sp"/>
</RelativeLayout>  
  
</LinearLayout>  