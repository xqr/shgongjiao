<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 左侧时间轴效果 -->
    <View
        android:id="@+id/view_timeline_1"
        android:layout_width="3dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/timeline" />
    
    <View
        android:id="@+id/view_timeline_4"
        android:layout_width="3dp"
        android:layout_height="5dp"
        android:layout_below="@+id/view_timeline_1"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/timeline" />

    <ImageView
        android:id="@+id/weixuanzhongicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/view_timeline_4"
        android:paddingLeft="15dp"
        android:paddingStart="15dp" 
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:src="@drawable/weixuanzhong2" />

    <View
        android:id="@+id/view_timeline_2"
        android:layout_width="3dp"
        android:layout_height="20dp"
        android:layout_below="@+id/weixuanzhongicon"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/timeline" />
    
    <View
        android:id="@+id/view_timeline_3"
        android:layout_width="3dp"
        android:layout_height="52dp"
        android:layout_below="@+id/weixuanzhongicon"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/timeline" 
        android:visibility="gone"/>
    
    <!-- 右侧显示效果 -->

    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_timeline_2"
        android:layout_below="@+id/view_timeline_1"
        android:layout_marginTop="-20dp"
        android:layout_toEndOf="@+id/view_timeline_1"
        android:layout_toRightOf="@+id/view_timeline_1"
        android:background="@color/blue"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="14dp" 
        android:paddingStart="14dp" >

        <TextView
                android:id="@+id/tv_station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="13dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:textSize="18sp"
                android:text="北京站"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/red"
                android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>