<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/huanchenglayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bannerr"
            android:background="@color/white"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:visibility="invisible">
        
        <RelativeLayout 
            android:layout_width="fill_parent"  
            android:layout_height="wrap_content">
            
            <ImageView
             android:id="@+id/switchqizongButton"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true"
             android:layout_marginLeft="10dp"
             android:layout_marginStart="10dp"
             android:layout_centerVertical="true"
             android:contentDescription="@string/app_name"
             android:src="@drawable/fanxiang" 
             android:onClick="switchStationsClick"/>
            
         <TableLayout
             android:layout_toStartOf="@id/switchqizongButton" 
             android:layout_toLeftOf="@id/switchqizongButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >
            <TableRow 
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                               
                <ImageView
                     android:layout_height="wrap_content" 
                     android:layout_width="wrap_content" 
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/qidian1"/>
                
                <EditText android:id="@+id/qiidianEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="请输入起点"/>
            </TableRow>
            <TableRow>
                <View
                    android:id="@+id/div_tab_bar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="1"
                    android:background="@color/silver"/>
            </TableRow>
            
            <TableRow 
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                     android:layout_height="wrap_content" 
                     android:layout_width="wrap_content" 
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/zongdian"/>
                
                <EditText android:id="@+id/zongdianEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="请输入终点"/>
            </TableRow>
        </TableLayout>
        </RelativeLayout>
        <View
            android:id="@id/div_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver"/>
        
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/button_send"
        android:id="@+id/hellobutton"
        android:textColor="#ffffff"
        android:background="@drawable/button_chaxun"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:onClick="searchRoutesClick"/>
        
</LinearLayout>
