<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededf0"
    tools:context="com.yhtye.gongjiaochaxun.ResultActivity" >

    <RelativeLayout 
        android:layout_width="fill_parent"  
        android:layout_height="60dp"
        android:background="@color/blue">
        
        <TextView style="@style/result_text"
            android:id="@+id/linename"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true" 
            android:gravity="center"/>
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/fanhuishangyiye" 
            android:onClick="backPrePageClick"/>
    </RelativeLayout>
    
    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    
    <RelativeLayout
        android:id="@+id/lineinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00aaff"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/qidian"
            style="@style/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/textView1"
            style="@style/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/qidian"
            android:text="  >  " />

        <TextView
            android:id="@+id/zhongdian"
            style="@style/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView1"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qidian"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/start"
                style="@style/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#43bd49"
                android:text=" 首 " />

            <TextView
                android:id="@+id/startime"
                style="@style/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="5dp"
                android:text="首发时间" />

            <TextView
                android:id="@+id/stop"
                style="@style/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d34545"
                android:text=" 末 " />

            <TextView
                android:id="@+id/stoptime"
                style="@style/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="末班时间" />
        </LinearLayout>

        <ImageView
            android:id="@+id/switch_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/baisebanfeng" 
            android:onClick="switchDirectionClick" />
        
        <TextView style="@style/result_text"
            android:layout_below ="@+id/switch_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返程"
            android:clickable="true"
            android:onClick="switchDirectionClick"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
        android:background="#fcf7e6"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        
        <ImageView
            android:id="@+id/tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/jinggao" />
        
        <TextView android:id="@+id/tips"
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_toRightOf="@+id/tishi"
            android:layout_toEndOf="@+id/tishi"
            android:gravity="center_vertical"
            android:text="@string/station_tip"/>
    </RelativeLayout>
    
    <ListView android:id="@+id/list_cards"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ededf0"
        android:divider="@null"
        android:listSelector="@android:color/transparent"  
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    </ListView>
    
</LinearLayout>
